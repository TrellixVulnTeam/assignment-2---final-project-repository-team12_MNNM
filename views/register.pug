extends layout

block content
  main.flex-shrink-0
    .container
      p.lead
      .container
  .row
    .Absolute-Center.is-Responsive
      #logo-container
      .col-sm-12.col-md-10.col-md-offset-1
        form#loginForm(action='/register', method="POST")
          .form-group.input-group
            span.input-group-addon
              i.glyphicon.glyphicon-user
            input.form-control(type='email' id="email" name='email' placeholder='email' required)
          .form-group.input-group
            span.input-group-addon
              i.glyphicon.glyphicon-lock
            input.form-control(type='password' id="email" name='password' placeholder='password' required)
          .checkbox
            label
              input(type='checkbox' name='checkbox')
              |  I agree to the 
              a(href='#') Terms and Conditions
            label
          .form-group
            button.btn.btn-def.btn-block(type='submit') Create Account
          .form-group.text-center.text-inline
            a(href='/') Return to Login
